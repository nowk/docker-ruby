#!/bin/bash
# vim: set filetype=sh :
set -e

VERSION=$(cat $(dirname $(readlink -f "$0"))/../VERSION)
DOCKER_IMAGE="ruby:$VERSION"

# include _docker.sh
. "$(dirname $0)/../lib/docker.sh/_docker.sh"

docker $(run_with --rm -it --volumes-from rubyv${VERSION} \
	-v $(pwd):/src \
	--entrypoint /usr/local/bin/ruby)
